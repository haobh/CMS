@model List<ModelEntity.EF.Module>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- panel-heading -->
            <div class="panel-heading">
                Danh sách Menu
            </div>
            <!-- /.panel-heading -->
            <!-- panel-body -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Module", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-1">
                            <a href="~/Admin/MenuType/Create" class="btn btn-success">Tạo mới</a>
                        </div>
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên Module</th>
                                <th>Mô tả</th>
                                <th>Thứ tự hiển thị</th>
                                <th>Trạng thái</th>
                                <th>Hiển thị ở trang</th>
                                <td>#</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <!--row_item.ID dùng để lấy ID ở hàng cần xóa-->
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.DisplayOrder</td>
                                    <td>@item.Status</td>
                                    <td>@item.DisplayPage</td>
                                    <td>
                                        <a href="~/Admin/MenuType/Edit/@item.ID">Sửa</a>
                                        |
                                        <a href="~/Admin/MenuType/Delete/@item.ID">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

