@model List<ModelEntity.EF.MenuType>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- panel-heading -->
            <div class="panel-heading">
                Danh sách Menu
            </div>
            <!-- /.panel-heading -->
            <!-- panel-body -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "MenuType", FormMethod.Get))
                {
                    <div class="row form-group">                      
                        <div class="col-lg-1">
                            <a href="~/Admin/MenuType/Create" class="btn btn-success">Tạo mới</a>
                        </div>
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã loại Menu</th>
                                <th>Tên loại Menu</th>                               
                                <td>#</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <!--row_item.ID dùng để lấy ID ở hàng cần xóa-->
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>                                    
                                    <td>
                                        <a href="~/Admin/MenuType/Edit/@item.ID">Sửa</a>
                                        |     
                                        <a href="~/Admin/MenuType/Delete/@item.ID">Xóa</a>
                                               
                                        @*@Ajax.ActionLink("Xóa", "Delete", new { id = @item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa bản ghi:" + @item.Name + " không ?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()", //Nếu chọn OK thì xóa
                                       HttpMethod = "Delete"
                                   })*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

